<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="activities.Update_password_Activity"
   >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:background="@color/colorPrimary"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"



        android:orientation="horizontal"
        android:id="@+id/toolbarlay"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/activity_vertical_margin_half"
            android:text="Excel labs"
            android:textColor="@color/toolbar_title"
            android:textSize="@dimen/text_large"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="@dimen/_5sdp"/>



    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_lay"
        android:fillViewport="true"

        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_20sdp"
            >





            <ImageView
                android:layout_height="@dimen/_70sdp"
                android:layout_width="@dimen/_70sdp"
                android:background="@drawable/update_password_lock"
                android:layout_gravity="center"

                android:id="@+id/img_changed"
                />

            <TextView
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/tv_text"
                android:fontFamily="@font/poppins_extrabold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_27sdp"

                android:text="NEW "
                android:layout_gravity="center"

                android:gravity="center_horizontal"/>


            <TextView
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_40sdp"

                android:layout_gravity="center"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"

                android:text="CREDENTIALS"
                android:textColor="@color/colorPrimary"

                android:textSize="@dimen/_27sdp" />

            <TextView
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Your identity has been verified! Set your new password"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:id="@+id/tv_text_detail"
              android:gravity="center_horizontal"
                android:layout_gravity="center"
            />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:orientation="horizontal"

               >

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:paddingStart="@dimen/_40sdp"
                    android:background="@drawable/check_rectangle"
                    android:imeOptions="actionDone"
                    android:inputType="textWebPassword"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_medium"
                   />
    <ImageView
        android:id="@+id/et_password_lock_img"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/stuff_lock"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/et_password_eye_img"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/_10sdp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/stuff_eye"

        android:layout_alignParentEnd="true"/>
</RelativeLayout>









            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:orientation="horizontal"

            >

                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/check_rectangle"

                    android:imeOptions="actionDone"
                    android:inputType="textWebPassword"
                    android:padding="@dimen/_4sdp"
                    android:paddingStart="@dimen/_40sdp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_medium" />

                <ImageView
                    android:id="@+id/et_new_password_lock_img"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/stuff_lock"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"/>

                <ImageView
                    android:id="@+id/et_new_password_eye_img"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/stuff_eye"

                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="@dimen/_45sdp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:id="@+id/layout_update_password"

                android:backgroundTint="@color/colorPrimary"

                android:background="@drawable/rounded_corners_gray_bg"
                android:layout_marginTop="@dimen/_20sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPDATE"
                  android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/text_medium"/>

            </LinearLayout>














        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</RelativeLayout>
