<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="activities.SignUpActivity"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/logo"
        android:gravity="center"
        android:textColor="@color/colorPrimary"

        android:id="@+id/img_logo"
        android:layout_marginStart="@dimen/_10sdp"
        android:visibility="gone"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_lay"
        android:fillViewport="true"
        android:layout_below="@+id/img_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin"
            android:gravity="center">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_gravity="start"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:text="Sign up"/>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/nunito_semi_bold"
                android:text="Please verify your phone number"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Phone number"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_13sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/edit_text_size"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@drawable/edit_text_rounded_corner_bg"
android:text="+92"
                    android:fontFamily="@font/poppins_bold"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorPrimaryTexttwo"
                    android:textSize="@dimen/text_medium" />
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:layout_gravity="center">
                   <View
                    android:layout_width="2dp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/grey"
                    android:id="@+id/view_flight_info"
                       android:layout_marginTop="@dimen/_4sdp"


                    />
               </LinearLayout> <EditText
                android:id="@+id/et_phone"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_size"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/edit_text_rounded_corner_bg"
                android:text=""
                android:hint="3000000000"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/text_medium" />
            </LinearLayout>




            <Button
                android:id="@+id/getPin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_size"
                android:layout_marginTop="@dimen/_30sdp"

                android:background="@drawable/rounded_corners_white"
                android:text="next"
                android:textStyle="normal"
                android:textColor="@color/colorWhite"
                android:enabled="false"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:text="Already have an account?"
                    android:textColor="@color/colorPrimaryTexttwo"
                    android:textSize="@dimen/text_tiny" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:id="@+id/layout_login">
                    <TextView
                        android:id="@+id/txt_login"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_4sdp"
                        android:paddingLeft="@dimen/_4sdp"
                        android:paddingTop="@dimen/activity_vertical_margin"

                        android:text="Log in"
                        android:textAllCaps="false"
                        android:textColor="@color/colorTheme"
                        android:textSize="@dimen/text_tiny" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txt_register"
                        android:background="@color/colorPrimary"
                        android:layout_marginStart="@dimen/_4sdp"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:orientation="vertical">









    </LinearLayout>

</RelativeLayout>
