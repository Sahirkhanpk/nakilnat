<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.Apply_promo_code_Activity"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

            android:background="@color/toolbar_bg"

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"



            android:orientation="horizontal"
            android:id="@+id/toolbarlay">

            <ImageView

                android:padding="@dimen/activity_vertical_margin_half"
                android:src="@drawable/ic_left_arrow"
                android:layout_gravity="center_vertical"
                android:id="@+id/back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/activity_vertical_margin_half"
                android:text="Promo Code"
                android:textColor="@color/toolbar_title"
                android:textSize="@dimen/text_large"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginStart="@dimen/_5sdp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_buttons"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@+id/toolbarlay"
            android:layout_marginTop="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"

                android:background="@drawable/rounded_corner_with_gray_border"


                android:id="@+id/btn_current">

                <EditText
                    android:id="@+id/et_promo_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_48sdp"




android:background="@color/colorTransparent"

                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:id="@+id/btn_apply"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/churus_button"
                android:backgroundTint="@color/colorPrimary"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apply"
                    android:id="@+id/txt_past"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/text_medium"
                    />




            </LinearLayout>
        </LinearLayout>













    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>