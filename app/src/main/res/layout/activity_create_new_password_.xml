<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="activities.Create_new_password_Activity"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:background="@color/colorWhite"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"



        android:orientation="horizontal"
        android:id="@+id/toolbarlay"
        tools:ignore="MissingConstraints">

        <ImageView

            android:padding="@dimen/activity_vertical_margin_half"
            android:src="@drawable/ic_left_arrow"
            android:layout_gravity="center_vertical"
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/ic_left_arrow"
            android:tint="@color/colorPrimaryText"
            />




    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_lay"
        android:fillViewport="true"
        android:layout_below="@+id/toolbarlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">


            <TextView
                android:id="@+id/tv_text"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Create new password"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="password?"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Your new password must be different from the Previous password"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:id="@+id/tv_text_detail"/>

            <ImageView
                android:layout_height="@dimen/_150sdp"
                android:layout_width="@dimen/_150sdp"
                android:background="@drawable/forgot_password"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_20sdp"
                android:id="@+id/img_lock"/>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tempassword"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Enter new temporary password"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/very_light_grey"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_new_temporary_password"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edit_text_size"
                    android:layout_weight="1"
                    android:background="@null"

                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_medium" />






            </LinearLayout>














            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_email"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Enter new password"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/very_light_grey"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edit_text_size"
                    android:layout_weight="1"
                    android:background="@null"

                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_medium" />






            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_new_password"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Confirm password"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_15sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/very_light_grey"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edit_text_size"
                    android:layout_weight="1"
                    android:background="@null"

                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_medium" />






            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_size"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_60sdp"
                android:id="@+id/layout_create_password"
                android:enabled="false"

                android:background="@drawable/rounded_corners_white" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create password"
                    android:gravity="center"
                    android:id="@+id/tv_btn"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/text_small"/>

            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:orientation="vertical">







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/layout_sign_up">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Remember password?"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_tiny" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:id="@+id/layout_register">
                <TextView
                    android:id="@+id/txt_register"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:paddingTop="@dimen/activity_vertical_margin"

                    android:text="Sign In"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/text_tiny" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_register"
                    android:background="@color/colorPrimary"
                    android:layout_marginStart="@dimen/_4sdp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
