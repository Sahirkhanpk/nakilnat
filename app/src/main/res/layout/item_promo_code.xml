            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingTop="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_gravity="center_horizontal">










                <TextView
                    android:id="@+id/tv_promo_name"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"





                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_medium"
                    tools:ignore="MissingPrefix"
                    />






                <TextView
                    android:id="@+id/tv_percentage"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/shop_avatar"

                    android:maxLines="1"
                    android:layout_alignParentEnd="true"

                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_small"
                    tools:ignore="MissingPrefix"
                    />







            </RelativeLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="5dp"
                android:paddingStart="12dp"
                >











                <TextView
                    android:id="@+id/tv_code"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="znvgdzznvs"

                    android:maxLines="1"

                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_small"
                    tools:ignore="MissingPrefix" />







            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/accept_reject_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center"

                    >

                    <TextView
                        android:id="@+id/tv_rs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/poppins_bold"
                        android:maxLines="1"
                        android:text="Rs. 500.00"

                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_medium"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tv_type"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/tv_rs"
                        android:maxLines="1"
                        android:text="minimum"

                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/text_small"
                        tools:ignore="MissingPrefix" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/_code"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:maxLines="1"
                        android:text="Valid unitil"

                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/text_small"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/_code"
                        android:fontFamily="@font/poppins_bold"
                        android:maxLines="1"
                        android:text="Jul 25,2021"

                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_medium"
                        tools:ignore="MissingPrefix" />
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

