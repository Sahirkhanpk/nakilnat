<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/task_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_gravity=""

        android:clickable="true"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
         >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"

                android:paddingStart="12dp"
                >
                <TextView
                    android:id="@+id/txt_test_name"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:text="Liver Function Test"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_small"
                    tools:ignore="MissingPrefix"
                    />


                <LinearLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                   android:gravity="right">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"


                    android:background="@drawable/stuff_done_gray"

                        android:id="@+id/item_check"


                        />

                    <Button
                        android:id="@+id/btn_more"
                        android:textColor="@color/colorPrimaryBlueText"
                        android:background="@drawable/ic_down"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"

                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp" />
                </LinearLayout>









            </RelativeLayout>




            <TextView

                android:id="@+id/txt_eng_detail"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

android:visibility="gone"

                android:maxLines="1"
                android:layout_marginEnd="@dimen/_15sdp"
                android:text="Take blood sample in red cap tube."
                android:layout_marginStart="@dimen/_15sdp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_small"
                tools:ignore="MissingPrefix"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_test_details"
                android:orientation="vertical"
              android:visibility="gone">
                <TextView

                android:id="@+id/txt_urdu_detail"
                android:fontFamily="@font/poppins_extrabold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

android:layout_gravity="right"
android:layout_marginTop="@dimen/_10sdp"
android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:text="ریڈ کیپ ٹیوب میں خون کا نمونہ لیں۔"
                android:layout_marginStart="@dimen/_15sdp"
                android:textColor="@color/secundaryTextColor"
                android:textSize="@dimen/text_medium"
                tools:ignore="MissingPrefix"
                />
            </LinearLayout>








        </LinearLayout>






    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"

        />

</LinearLayout>