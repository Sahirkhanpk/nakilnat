<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="activities.ResgisterActivity"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/img_logo"
       android:gravity="center">
       <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"

        android:gravity="center"
        android:textColor="@color/colorPrimary"

       android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_10sdp"
     />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingBottom="@dimen/activity_vertical_margin"
           android:id="@+id/layout_later"
           android:layout_alignParentEnd="true"
           android:visibility="gone"

         >
           <TextView
               android:id="@+id/txt_later"
               android:layout_width="@dimen/_60sdp"
               android:layout_height="wrap_content"
               android:paddingStart="@dimen/_4sdp"
               android:paddingLeft="@dimen/_4sdp"
               android:paddingTop="@dimen/activity_vertical_margin"
android:fontFamily="@font/nunito_semi_bold"
               android:text="Later"
               android:textAllCaps="false"
               android:textColor="@color/colorPrimaryTexttwo"
               android:textSize="@dimen/text_tiny" />

           <View
               android:layout_width="40dp"
               android:layout_height="1dp"
               android:layout_below="@+id/txt_register"
               android:background="@color/colorPrimaryText"
               android:layout_marginStart="@dimen/_4sdp"/>
       </LinearLayout>
   </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_lay"
        android:fillViewport="true"
        android:layout_below="@+id/img_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/_30sdp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:text="Continue to Sign up"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">
                <LinearLayout
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First name"
                        android:textColor="@color/colorPrimaryTexttwo"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="@dimen/_9sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >


                        <EditText
                            android:id="@+id/et_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                          
                            android:background="@drawable/edit_text_rounded_corner_bg"
android:backgroundTint="@color/very_light_grey"
                            android:imeOptions="actionNext"

                            android:padding="@dimen/_4sdp"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/text_medium" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last name"
                        android:textColor="@color/colorPrimaryTexttwo"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="@dimen/_9sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <EditText
                            android:id="@+id/et_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"

                            android:background="@drawable/edit_text_rounded_corner_bg"
                            android:backgroundTint="@color/very_light_grey"
                            android:imeOptions="actionNext"



                            android:padding="@dimen/_4sdp"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="@dimen/_9sdp"  />

                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>











            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Full name"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/et_full_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_size"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/edit_text_rounded_corner_bg"

                android:imeOptions="actionNext"

                android:padding="@dimen/_4sdp"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_medium"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Email address"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/edit_text_rounded_corner_bg"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edit_text_size"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_rounded_corner_bg"
                    android:backgroundTint="@color/very_light_grey"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_medium" />

               <!-- <ImageView
                    android:id="@+id/et_password_eye_img"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/ic_eye_open"
                    />-->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Date of birh"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_13sdp"
                />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
            <EditText
                android:id="@+id/et_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_size"
                android:layout_marginTop="@dimen/_4sdp"

                android:background="@drawable/edit_text_rounded_corner_bg"
                android:backgroundTint="@color/very_light_grey"

                android:imeOptions="actionNext"

                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_medium" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/calendar"
       android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_10sdp"/>
</RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Gender"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_13sdp"
                />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">
                <RadioButton android:id="@+id/radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    />
                <RadioButton android:id="@+id/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                   android:layout_marginStart="@dimen/_15sdp"/>
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Referral Code (optional)"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/edit_text_rounded_corner_bg"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_reffral"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edit_text_size"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_rounded_corner_bg"
                    android:backgroundTint="@color/very_light_grey"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_medium" />

                <!-- <ImageView
                     android:id="@+id/et_password_eye_img"
                     android:layout_width="@dimen/_30sdp"
                     android:layout_height="match_parent"
                     android:layout_marginEnd="@dimen/_4sdp"
                     android:contentDescription="@string/app_name"
                     android:padding="@dimen/_4sdp"
                     android:src="@drawable/ic_eye_open"
                     />-->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="City"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_13sdp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <Spinner
                    android:id="@+id/et_select_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_size"
                    android:layout_weight="1"

                    android:background="@drawable/edit_text_rounded_corner_bg"
                    android:backgroundTint="@color/very_light_grey"
                    android:entries="@array/cities"
                    android:padding="@dimen/_4sdp"
                    android:text="Select Branch"


                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_medium"
                    android:theme="@style/mySpinnerItemStyle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_action_select"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Address"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_13sdp"
                />
            <RelativeLayout
                android:id="@+id/layout_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"

                android:gravity="bottom"
                >


                <EditText
                    android:id="@+id/et_add_address"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:padding="@dimen/_2sdp"
                    android:backgroundTint="@color/very_light_grey"

                    android:textColor="@color/colorPrimaryTexttwo" />

                <ImageView

                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:src="@drawable/ic_location"
                    android:id="@+id/img_loc"

                    android:layout_marginStart="@dimen/_2sdp"/>

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Password"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_13sdp"
                />
            <RelativeLayout
                android:id="@+id/password_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"

                android:gravity="bottom"
                >

                <EditText
                    android:id="@+id/ed_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_size"
                    android:background="@drawable/edit_text_rounded_corner_bg"
                    android:backgroundTint="@color/very_light_grey"

                    android:drawablePadding="@dimen/_8sdp"
                    android:hint="@string/password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textSize="@dimen/text_normal"
                    android:focusableInTouchMode="true" />

                <ImageView
                    android:id="@+id/eye_img"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:src="@drawable/ic_eye_open"
               />

            </RelativeLayout>













            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Password"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_13sdp"
                />



            <RelativeLayout
                android:id="@+id/confrom_password_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"

                android:gravity="bottom"
                >

                <EditText
                    android:id="@+id/confrom_ed_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_size"
                    android:background="@drawable/edit_text_rounded_corner_bg"

                    android:drawablePadding="@dimen/_8sdp"
                    android:focusableInTouchMode="true"
                    android:hint="Confirm password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textSize="@dimen/text_normal" />

                <ImageView
                    android:id="@+id/_eye_img"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:src="@drawable/ic_eye_open"
                />

            </RelativeLayout>




            <!-- <TextView
                 android:id="@+id/txt_forgot_password"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:fontFamily="@font/nunito_semi_bold"
                 android:gravity="right"
                 android:padding="@dimen/activity_vertical_margin_half"
                 android:text="Forgot password?"
                 android:textColor="@color/colorTheme"
                 android:textSize="@dimen/text_medium" />-->

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <Button
            android:id="@+id/signUp_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/rounded_corners_white"
            android:text="Create Account"
            android:textStyle="normal"
            android:textColor="@color/colorWhite"
          />


    </LinearLayout>

</RelativeLayout>
