<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.Task_details_Activity"
    android:background="@color/very_light_grey_two">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

            android:background="@color/toolbar_bg"

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"



            android:orientation="horizontal"
            android:id="@+id/toolbarlay">

            <ImageView

                android:padding="@dimen/activity_vertical_margin_half"
                android:src="@drawable/ic_left_arrow"
                android:layout_gravity="center_vertical"
                android:id="@+id/back_img"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_5sdp"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/activity_vertical_margin_half"
                android:text="Task List"
                android:textColor="@color/toolbar_title"
                android:textSize="@dimen/text_large"

                android:layout_marginStart="@dimen/_5sdp"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/layout_today"
          android:layout_below="@+id/toolbarlay">
            <TextView
                android:id="@+id/new_task_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/poppins_semibold"
                android:paddingStart="@dimen/_15sdp"
                android:text="PERSONAL INFORMATION"
                android:textColor="@color/colorPrimaryBlueTexttwo"
                android:textSize="@dimen/_13sdp" />
            <TextView
                android:id="@+id/new_task_date"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"

                android:paddingStart="@dimen/_15sdp"
                android:text="Next Week"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/poppins_regular"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
   android:id="@+id/layout_account_details"
          android:padding="@dimen/_14sdp"
android:layout_below="@+id/layout_today"
android:elevation="@dimen/_10sdp"
       android:background="@drawable/rounded_corners"
           android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
            >






            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:orientation="horizontal"


                android:id="@+id/layout_user_detals">

                <TextView
                    android:id="@+id/txt_name"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:maxLines="1"



                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="MissingPrefix"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:id="@+id/avatar_call"

                    >
                    <TextView
                        android:id="@+id/txt_age"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"

                        android:maxLines="1"

                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/_9sdp"
                        tools:ignore="MissingPrefix" />


                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_call"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"

                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:maxLines="1"

                android:src="@drawable/stuff_call_invert"

                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_small"
                tools:ignore="MissingPrefix"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_user_detals"
               >
                <TextView

                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:maxLines="1"
                    android:text="Account No:"

                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="MissingPrefix"
                    />

                <TextView
                    android:id="@+id/txt_Account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_bold"
android:layout_marginStart="@dimen/_5sdp"
                    android:maxLines="1"


                    android:textColor="@color/colorPrimaryBlueTexttwo"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/address_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
android:paddingTop="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_corners"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_below="@+id/layout_account_details">

            <Button
                android:id="@+id/accept_btn"
                android:textColor="@color/colorPrimaryBlueText"
                android:background="@drawable/ic_location"
                android:backgroundTint="@color/colorPrimaryText"
                android:layout_marginStart="@dimen/_12sdp"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                />
            <TextView
                android:id="@+id/address_txt"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:maxLines="2"

                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_11sdp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/test_details"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:background="@drawable/rounded_corners"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_below="@+id/address_layout">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/test_rv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"

           android:nestedScrollingEnabled="true" >

            </androidx.recyclerview.widget.RecyclerView>


            <TextView
                android:id="@+id/total"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:maxLines="1"
                android:text="Total amount due"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_11sdp"
                tools:ignore="MissingPrefix" />
            <TextView
                android:id="@+id/total_price"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:maxLines="1"

                android:textColor="@color/colorPrimaryBlueText"
                android:textSize="@dimen/_22sdp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size"
            android:gravity="center"
            android:layout_gravity="center"
           android:layout_marginTop="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:id="@+id/layout_add_test"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
android:layout_below="@+id/test_details"
            android:background="@drawable/rounded_corners" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Test"
                android:textColor="@color/colorPrimaryBlueText"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/text_small"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:id="@+id/layout_proceed"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_below="@+id/layout_add_test"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorPrimaryBlueText">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/text_small"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>