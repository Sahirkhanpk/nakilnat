<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/task_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:clickable="true"
        card_view:cardCornerRadius="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingTop="12dp"
                android:paddingStart="12dp"
                android:layout_gravity="center_horizontal">










                <TextView
                    android:id="@+id/offer_message"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/shop_avatar"
                    android:layout_toRightOf="@+id/shop_avatar"


                    android:text="Get PKR 1000 in your wallet for 30,000 points."
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_medium"
                    tools:ignore="MissingPrefix"
                    />







            </RelativeLayout>


            <LinearLayout
                android:id="@+id/layout_redeem"
                android:layout_width="@dimen/_210sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_button_primary_color"

                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"

                    android:text="Redeem offer"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_small" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>