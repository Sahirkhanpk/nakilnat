<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_corners_gray_2"

            android:id="@+id/task_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/warning_sign"
                   android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerVertical="true"
android:visibility="gone"
                    android:id="@+id/img_warning"

                 />

                <TextView

                    android:id="@+id/tv_title"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                  android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="@dimen/_4sdp"
android:layout_toEndOf="@+id/img_warning"
                    android:text="EARN LOYALTY POINTS ON EVERY "
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_small" />
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="6 April"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/_8sdp"
android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_5sdp"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_discription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_45sdp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:text="Refer to a friend or family memberaksdgjkasgdkjasgdkjasgdaksjgdaksjassdbvashdaskdh"
                android:textColor="@color/colorPrimaryTexttwo"
                android:textSize="@dimen/_9sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
    android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp">

<LinearLayout
    android:layout_width="@dimen/_30sdp"
    android:layout_height="@dimen/_30sdp"
    android:id="@+id/img_download"
    android:gravity="center">
    <ImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:src="@drawable/download_icon"

android:visibility="gone"
        android:layout_centerVertical="true"

        android:layout_marginEnd="@dimen/_10sdp"
       />
</LinearLayout>


                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/shareicon"
                        android:layout_toEndOf="@+id/img_download"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:id="@+id/img_share"
                        android:visibility="gone"/>


            </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:id="@+id/view"
android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
           />

    </LinearLayout>

</LinearLayout>