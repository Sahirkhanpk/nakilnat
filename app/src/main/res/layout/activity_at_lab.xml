<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.All_reports_Activity"
    android:orientation="vertical"
    android:background="@color/colorWhite" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:background="@color/toolbar_bg"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"



        android:orientation="horizontal"
        android:id="@+id/toolbarlay">

        <ImageView

            android:padding="@dimen/activity_vertical_margin_half"
            android:src="@drawable/ic_left_arrow"
            android:layout_gravity="center_vertical"
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/activity_vertical_margin_half"
            android:text="Back"
            android:textColor="@color/toolbar_title"
            android:textSize="@dimen/text_large"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="@dimen/_5sdp"/>


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lebel_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Choose an option for providing Sample at the lab"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_large" />

                <RelativeLayout
                    android:id="@+id/layout_pre_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/lebel_txt"
                    android:layout_marginTop="@dimen/_30sdp">

                    <EditText
                        android:id="@+id/et_pre_book"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_48sdp"

                        android:background="@drawable/rounded_corner_edittext"

                        android:cursorVisible="false"

                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:imeOptions="actionNext"
                        android:padding="@dimen/_4sdp"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Pre Book"
                        android:id="@+id/tv_pre_book"
                        android:textColor="@color/colorPrimaryText" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
android:layout_marginBottom="@dimen/_75sdp"
                    android:layout_below="@+id/layout_pre_book"
                    android:layout_marginTop="@dimen/_15sdp">

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_48sdp"
android:id="@+id/et_request_oppointment"
                        android:background="@drawable/rounded_corner_edittext"

                        android:cursorVisible="false"

                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:imeOptions="actionNext"
                        android:padding="@dimen/_4sdp"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Request appointment for procedure"
                        android:textColor="@color/colorPrimaryText"
                        android:id="@+id/tv_Request_oppointment"/>
                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>