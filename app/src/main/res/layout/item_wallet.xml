<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/task_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="1dp"
        android:clickable="true"
        card_view:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/rounded_corners_gray"
                android:id="@+id/transections_header"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_40sdp"

                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/testType_payment">

                    <TextView
                        android:id="@+id/payment_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_4sdp"
                        android:paddingEnd="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Transaction"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_medium"
                        android:layout_gravity="start" />








                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingStart="@dimen/_4sdp"
                        android:paddingEnd="@dimen/_4sdp"
                        android:text="Total"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_gravity="start"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_medium"
                        android:fontFamily="@font/poppins_bold"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/payment_rs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingStart="@dimen/_4sdp"
                        android:paddingEnd="@dimen/_4sdp"
                        android:text="Paid"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_medium"
                        android:fontFamily="@font/poppins_bold"
                        />
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"

                android:paddingTop="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
             android:layout_gravity="center_horizontal">


                <TextView
                    android:id="@+id/tv_test_name"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"


                    android:text="Credited By Wallet"


                    android:textColor="@color/colorPrimaryBlueText"
                    android:textSize="@dimen/text_medium"
                    />

                <TextView
                    android:id="@+id/tv_total"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/shop_avatar"

                    android:maxLines="1"
                    android:layout_centerInParent="true"
                    android:text="PKR 1200"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_small"
                    tools:ignore="MissingPrefix"
                    />


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
  android:orientation="vertical" >
    <TextView
        android:id="@+id/tv_transection"
        android:fontFamily="@font/poppins_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:maxLines="1"

        android:text="-PKR 1200"

        android:textColor="@color/colorRedPure"
        android:textSize="@dimen/text_small"
        tools:ignore="MissingPrefix"
        />


        <TextView
            android:id="@+id/tv_discription"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/nunito_regular"

            android:text="Monday,21 June 2021"

            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/_9sdp"
            tools:ignore="MissingPrefix" />


</LinearLayout>








            </RelativeLayout>








            <RelativeLayout
                android:id="@+id/accept_reject_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center"

                    >

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semi_bold"

                        android:text="Monday,21 June 2021"

                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_medium"
                        tools:ignore="MissingPrefix" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                  >

                    <TextView
                        android:id="@+id/_code"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:maxLines="1"
                        android:text="Paid by"
android:fontFamily="@font/nunito_semi_bold"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_small"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tv_paid_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/_code"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLines="1"
                        android:text="Cash"

                        android:textColor="@color/colorPrimaryBlueText"
                        android:textSize="@dimen/text_medium"
                        tools:ignore="MissingPrefix" />
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>