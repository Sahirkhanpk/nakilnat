<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/task_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_margin="12dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
android:layout_gravity=""

        android:clickable="true"
        card_view:cardCornerRadius="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/order_status"
                    fontPath="fonts/Nunito-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    tools:ignore="MissingPrefix"
                    android:layout_marginStart="@dimen/_5sdp"
                    />

                <TextView
                    android:id="@+id/time_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="@string/time_left_txt"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/_5sdp"

                android:paddingStart="12dp"
              >






<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/shop_avatar"

                    android:maxLines="1"

                    android:text="John"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_small"
                    tools:ignore="MissingPrefix"
                    />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/avatar_call"

        >
        <TextView
            android:id="@+id/txt_age"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"

            android:maxLines="1"
            android:text="40, "
            android:textColor="@color/colorPrimaryBlueText"
            android:textSize="@dimen/_9sdp"
            tools:ignore="MissingPrefix" />
        <TextView
            android:id="@+id/gender"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@+id/txt_age"
            android:layout_toRightOf="@+id/txt_age"
            android:maxLines="1"
            android:text="Male"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/_9sdp"
            tools:ignore="MissingPrefix" />

    </RelativeLayout>
</LinearLayout>

                <TextView
                    android:id="@+id/txt_time"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

             android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
android:layout_marginEnd="@dimen/_15sdp"
                    android:text="10:00 am"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_small"
                    tools:ignore="MissingPrefix"
                    />







            </RelativeLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="5dp"
                android:paddingStart="12dp"
                >



















            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"

                android:layout_below="@+id/layout_item"/>

            <LinearLayout
                android:id="@+id/accept_reject_layout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
               android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                >

                <Button
                    android:id="@+id/accept_btn"
                    android:textColor="@color/colorPrimaryBlueText"
                    android:background="@drawable/ic_location"
                    android:backgroundTint="@color/light_grey"
                   android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    />
                <TextView
                    android:id="@+id/address_txt"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:layout_marginEnd="@dimen/_12sdp"
             android:layout_marginStart="@dimen/_5sdp"
                    android:maxLines="2"
                    android:text="Malelskjadhklahdklashdkashdkashdkashdaksdjhaksdhkas"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/_9sdp"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>