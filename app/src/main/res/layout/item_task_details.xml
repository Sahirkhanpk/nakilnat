<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/task_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_gravity=""

        android:clickable="true"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingStart="12dp">
                <TextView
                    android:id="@+id/txt_test_name"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:text="Liver Function Test"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/_9sdp"
                    tools:ignore="MissingPrefix"
                    />
                <LinearLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/txt_test_cost"
                        android:fontFamily="@font/poppins_extrabold"
                        android:layout_width="@dimen/_80sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_alignEnd="@+id/txt_test_name"

                        android:layout_centerInParent="true"
                        android:maxLines="1"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="17000"

                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_9sdp"
                        tools:ignore="MissingPrefix"
                        />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@color/grey"
                        android:backgroundTint="@color/colorPrimaryText"
                        android:id="@+id/view_black"
                        android:layout_marginTop="@dimen/_4sdp"




                        />

                    <Button
                        android:id="@+id/btn_delete"
                        android:textColor="@color/colorPrimaryBlueText"
                        android:background="@drawable/ic_delete"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                       android:layout_marginStart="@dimen/_5sdp" />
                </LinearLayout>









            </RelativeLayout>













        </LinearLayout>



    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"

        />

</LinearLayout>