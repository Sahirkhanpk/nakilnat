<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/_10sdp"

    android:id="@+id/item_layout_slot"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/item_layout"

        >
        <!--<ImageView
            android:src="@color/colorTheme"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp" />-->

        <TextView
            android:id="@+id/addon_detail"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:background="@drawable/rounded_corners_pure_white"

            android:layout_gravity="center"
            android:gravity="center"

            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorPrimaryTexttwo"
            android:text="10:00 am"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp" />
        <TextView
            android:id="@+id/add"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/colorPrimaryBlueText"
            android:text="+ Add"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:visibility="gone"
            />

    </LinearLayout>







</LinearLayout>